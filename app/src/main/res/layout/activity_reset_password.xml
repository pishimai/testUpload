<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:orientation="vertical">

  <RelativeLayout
    android:id="@+id/rl_title"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white">
    <ImageButton
      android:id="@+id/iv_back"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:padding="10dp"
      android:background="@null"
      android:src="@mipmap/icon_back"
      android:visibility="visible" />
    <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_centerInParent="true"
      android:padding="10dp"
      android:text="设置密码"
      android:textColor="@color/text_orange"
      android:textSize="@dimen/activity_title_size" />
  </RelativeLayout>

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="10dp"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="20dp"
    android:background="@drawable/shape_login_input_bg"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <ImageView
      style="@style/iv_icon_input_left"
      android:src="@mipmap/icon_password" />

    <EditText
      android:id="@+id/et_reset_password_input"
      style="@style/et_password_input"
      android:hint="请输入6-16位字母，数字" />
  </LinearLayout>

  <TextView
    android:id="@+id/tv_reset_password_commit"
    style="@style/tv_register_login"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="20dp"
    android:text="提交" />

</LinearLayout>